<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_pengeluaran"
        android:visibility="invisible"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frame"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id="@+id/backgroud_image"
            android:foreground="#4d000000"
            android:src="@drawable/day"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/item_waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 AM"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/item_pengeluaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_waktu"
                android:text="Rp. 1000"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/item_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_waktu"
                android:text="01 Juni 2017"
                android:layout_below="@+id/item_pengeluaran"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/item_deskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_below="@+id/item_waktu"
                android:text="Beli Gorengan"
                android:textSize="13dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                />
        </RelativeLayout>

    </FrameLayout>
</RelativeLayout>